{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../../",
    "paths": {
      "@eco-solver/*": ["apps/eco-solver/src/*"],
      "@eco-solver/liquidity-manager/types/types": [
        "apps/eco-solver/src/liquidity-manager/types/types.d.ts"
      ],
      "@libs/config-core": ["libs/config/src/index.ts"],
      "@libs/config-providers": ["libs/config/providers/src/index.ts"],
      "@libs/config-schemas": ["libs/config/schemas/src/index.ts"],
      "@libs/config-testing": ["libs/config/testing/src/index.ts"],
      "@libs/solver-config": ["libs/solver-config/src/index.ts"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "test/**/*"],
  "include": ["src/**/*"]
}
