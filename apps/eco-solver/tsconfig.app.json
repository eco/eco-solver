{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": "../../",
    "paths": {
      "@eco-solver/*": ["apps/eco-solver/src/*"],
      "@eco-solver/liquidity-manager/types/types": [
        "apps/eco-solver/src/liquidity-manager/types/types.d.ts"
      ],
      "@libs/config-core": ["libs/config/src/index.ts"],
      "@libs/config-providers": ["libs/config/providers/src/index.ts"],
      "@libs/config-schemas": ["libs/config/schemas/src/index.ts"],
      "@libs/config-testing": ["libs/config/testing/src/index.ts"],
      "@libs/solver-config": ["libs/solver-config/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts", 
    "**/__tests__/**", 
    "**/node_modules/**",
    "**/node_modules/.pnpm/@zerodev+sdk@*/**",
    "**/node_modules/.pnpm/permissionless@*/**",
    "node_modules/@zerodev/**",
    "node_modules/permissionless/**"
  ]
}
