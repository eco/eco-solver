{
  "name": "eco-solver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/eco-solver/src",
  "projectType": "application",
  "tags": ["scope:eco-solver", "type:app"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "main": "apps/eco-solver/src/main.ts",
        "tsConfig": "apps/eco-solver/tsconfig.app.json",
        "webpackConfig": "apps/eco-solver/webpack.config.js",
        "outputPath": "dist/apps/eco-solver",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/eco-solver/config",
            "output": "config"
          }
        ]
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/eco-solver/src/environments/environment.ts",
              "with": "apps/eco-solver/src/environments/environment.development.ts"
            }
          ]
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/eco-solver/src/environments/environment.ts",
              "with": "apps/eco-solver/src/environments/environment.production.ts"
            }
          ]
        },
        "staging": {
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/eco-solver/src/environments/environment.ts",
              "with": "apps/eco-solver/src/environments/environment.staging.ts"
            }
          ]
        },
        "preproduction": {
          "optimization": true,
          "extractLicenses": true,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/eco-solver/src/environments/environment.ts",
              "with": "apps/eco-solver/src/environments/environment.preproduction.ts"
            }
          ]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/eco-solver/package.json",
        "{workspaceRoot}/dist/apps/eco-solver/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/eco-solver/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node --enable-source-maps dist/apps/eco-solver/main.js",
        "cwd": "."
      },
      "configurations": {
        "development": {
          "command": "node --enable-source-maps dist/apps/eco-solver/main.js",
          "env": {
            "NODE_ENV": "development",
            "NODE_CONFIG_DIR": "dist/apps/eco-solver/config"
          }
        },
        "production": {
          "command": "node --enable-source-maps dist/apps/eco-solver/main.js",
          "env": {
            "NODE_ENV": "production",
            "NODE_CONFIG_DIR": "dist/apps/eco-solver/config"
          }
        },
        "staging": {
          "command": "node --enable-source-maps dist/apps/eco-solver/main.js",
          "env": {
            "NODE_ENV": "staging",
            "NODE_CONFIG_DIR": "dist/apps/eco-solver/config"
          }
        },
        "preproduction": {
          "command": "node --enable-source-maps dist/apps/eco-solver/main.js",
          "env": {
            "NODE_ENV": "preproduction",
            "NODE_CONFIG_DIR": "dist/apps/eco-solver/config"
          }
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node src/commander/command-main.ts",
        "cwd": "apps/eco-solver",
        "env": {
          "NODE_CONFIG_DIR": "./config"
        }
      }
    }
  }
}
