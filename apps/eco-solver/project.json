{
  "name": "eco-solver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/eco-solver/src",
  "projectType": "application",
  "tags": ["scope:eco-solver", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "./scripts/build-eco-solver.sh",
        "cwd": "."
      },
      "configurations": {
        "development": { "watch": true, "sourceMaps": true },
        "production": { "watch": false, "sourceMaps": false }
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "eco-solver:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "eco-solver:build:development"
        },
        "production": {
          "buildTarget": "eco-solver:build:production"
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint apps/eco-solver --ext .ts"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config jest.config.ts --runInBand"
      }
    }
  }
}
