{
  "name": "eco-solver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/eco-solver/src",
  "projectType": "application",
  "tags": ["scope:eco-solver", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/eco-solver"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        },
        "preproduction": {
          "args": ["--node-env=preproduction"]
        },
        "staging": {
          "args": ["--node-env=staging"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/eco-solver/package.json",
        "{workspaceRoot}/dist/apps/eco-solver/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/eco-solver/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "eco-solver:build",
        "runBuildTargetDependencies": false,
        "env": {
          "NODE_CONFIG_DIR": "apps/eco-solver/config"
        }
      },
      "configurations": {
        "development": {
          "buildTarget": "eco-solver:build:development",
          "env": {
            "NODE_CONFIG_DIR": "apps/eco-solver/config"
          }
        },
        "production": {
          "buildTarget": "eco-solver:build:production",
          "env": {
            "NODE_CONFIG_DIR": "apps/eco-solver/config"
          }
        },
        "preproduction": {
          "buildTarget": "eco-solver:build:preproduction",
          "env": {
            "NODE_CONFIG_DIR": "apps/eco-solver/config"
          }
        },
        "staging": {
          "buildTarget": "eco-solver:build:staging",
          "env": {
            "NODE_CONFIG_DIR": "apps/eco-solver/config"
          }
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node src/commander/command-main.ts",
        "cwd": "apps/eco-solver",
        "env": {
          "NODE_CONFIG_DIR": "./config"
        }
      }
    }
  }
}
