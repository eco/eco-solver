# Production Environment Configuration Template
# Copy this file to .env.production and set actual values

NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Database Configuration - SET THESE VIA ENVIRONMENT VARIABLES
# DB_HOST=your-production-db-host
# DB_PORT=5432
# DB_USERNAME=your-db-user
# DB_PASSWORD=your-secure-database-password
# DB_DATABASE=eco_solver_prod
DB_SSL=true

# Logging Configuration
LOG_LEVEL=warn
LOG_CONSOLE=false
LOG_FILE=true

# API Configuration
API_PREFIX=/api
API_VERSION=v1
CORS_ENABLED=true
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# Security Configuration - MUST BE SET VIA ENVIRONMENT VARIABLES
# JWT_SECRET=your-very-secure-jwt-secret-min-32-chars
JWT_EXPIRATION=15m
BCRYPT_ROUNDS=12

# WARNING: Never commit actual production secrets to version control
# Use your deployment system's environment variable injection instead